---
import BaseLayout from "../layouts/BaseLayout.astro"
import ContactForm from "../components/ContactForm.astro"
const pageTitle = "Contact me"
---

<BaseLayout pageTitle={pageTitle}>
  <div class="hero bg-base-200 min-h-svh">
    <div class="hero-content flex-col lg:flex-row">
      <div class="prose-serif">
        <h1>{pageTitle}</h1>
        <p>
          If you have any questions or feedback, feel free to reach out to me. I
          will try to get back to you as soon as possible. Drop me a <a
            href="mailto:web@kadykov.com">message</a
          > or use the form.
        </p>
      </div>
      <ContactForm />
    </div>
  </div>
</BaseLayout>
