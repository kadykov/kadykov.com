---
import { getCollection } from "astro:content"
import BaseLayout from "../layouts/BaseLayout.astro"
import GalleryPreview from "../components/GalleryPreview.astro"

const pageTitle = "Galleries"
const allPosts = await getCollection("galleries")
---

<BaseLayout pageTitle={pageTitle}>
  <ul>
    {
      allPosts.map((gallery) => (
        <GalleryPreview url={"/galleries/" + gallery.id} title={gallery.id} />
      ))
    }
  </ul>
</BaseLayout>
