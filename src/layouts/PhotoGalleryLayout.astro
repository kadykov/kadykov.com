---
import BaseLayout from "./BaseLayout.astro"

interface Props {
  frontmatter: {
    title: string
    description: string
    [key: string]: any
  }
}

const { frontmatter } = Astro.props

// Add pageType to frontmatter for photo gallery styling
const enhancedFrontmatter = {
  ...frontmatter,
  pageType: "photo-gallery",
}
---

<BaseLayout frontmatter={enhancedFrontmatter}>
  <slot />
</BaseLayout>
