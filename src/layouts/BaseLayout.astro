---
import { ViewTransitions } from "astro:transitions"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Prose from "../components/Prose.astro"
import "@fontsource/fira-sans/500.css"
import "@fontsource/ibm-plex-serif"
import "@fontsource/ibm-plex-serif/700.css"
import "@fontsource/ibm-plex-serif/400-italic.css"
import "@fontsource/ibm-plex-mono/200.css"
import ibmPlexSerifWoff2 from "@fontsource/ibm-plex-serif/files/ibm-plex-serif-latin-400-normal.woff2?url"
import firaSansWoff2 from "@fontsource/fira-sans/files/fira-sans-latin-500-normal.woff2?url"
const { pageTitle } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={firaSansWoff2}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={ibmPlexSerifWoff2}
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
  <body class="flex flex-col min-h-svh subpixel-antialiased">
    <div class="shadow-lg bg-blue-200">
      <div class="mx-auto max-w-screen-md xl:max-w-screen-xl w-5/6">
        <Header />
      </div>
    </div>
    <main class="mx-auto mb-10 w-5/6 max-w-screen-md">
      <div class="mt-10 mb-5">
        <Prose>
          <h1>{pageTitle}</h1>
        </Prose>
      </div>
      <slot />
    </main>
    <div class="shadow-inner bg-blue-200 mt-auto">
      <div class="mx-auto max-w-screen-md xl:max-w-screen-xl w-5/6 font-serif">
        <Footer />
      </div>
    </div>
    <script>
      import "../scripts/menu.js"
      import type { TransitionBeforeSwapEvent } from "astro:transitions/client"
      document.addEventListener("astro:before-swap", (e) =>
        [
          ...(e as TransitionBeforeSwapEvent).newDocument.head.querySelectorAll(
            'link[as="font"]'
          ),
        ].forEach((link) => link.remove())
      )
    </script>
  </body>
</html>
