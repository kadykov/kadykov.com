---
import Footer from "../components/Footer.astro"
import fontSans from "@fontsource-variable/source-sans-3/files/source-sans-3-latin-wght-normal.woff2?url"
import fontSerif from "@fontsource-variable/bitter/files/bitter-latin-wght-normal.woff2?url"
import Header from "../components/Header.astro"
const {
  title = "kadykov.com",
  description = "A photo gallery and blog by Kadykov.",
} = Astro.props
import "../styles/base.css"
---

<html lang="en">
  <head>
    <script
      is:inline
      defer
      src="/umami/script.js"
      data-website-id="8254b650-ea3c-461d-9f3e-0ad467230fa1"></script>

    <script is:inline>
      // Theme initialization to prevent flash
      const initTheme = () => {
        const savedTheme = localStorage.getItem("theme")

        if (savedTheme === "light") {
          document.documentElement.setAttribute("data-theme", "light")
        } else if (savedTheme === "dark") {
          document.documentElement.setAttribute("data-theme", "dark")
        } else {
          // Auto mode - let CSS media query handle it
          document.documentElement.removeAttribute("data-theme")
        }
      }

      // Run immediately to prevent flash
      initTheme()
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={fontSans}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={fontSerif}
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style is:global>
      @view-transition {
        navigation: auto;
      }

      main {
        min-height: 60vh;
        width: 100%;
        margin: 0 auto;
        padding: 0 1rem;
        max-width: 1200px;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
