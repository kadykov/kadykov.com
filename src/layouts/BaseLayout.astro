---
import Footer from "../components/Footer.astro"
import Drawer from "../components/Drawer.astro"
import fontSans from "@fontsource-variable/source-sans-3/files/source-sans-3-latin-wght-normal.woff2?url"
import fontSerif from "@fontsource-variable/bitter/files/bitter-latin-wght-normal.woff2?url"
import Header from "../components/Header.astro"
const {
  title = "kadykov.com",
  description = "A photo gallery and blog by Kadykov.",
} = Astro.props
import "../styles/base.css"
---

<html lang="en">
  <head>
    <script
      is:inline
      defer
      src="/umami/script.js"
      data-website-id="8254b650-ea3c-461d-9f3e-0ad467230fa1"></script>

    <script is:inline>
      // Theme initialization to prevent flash
      const initTheme = () => {
        const savedTheme = localStorage.getItem("theme")

        if (savedTheme === "light") {
          document.documentElement.setAttribute("data-theme", "light")
        } else if (savedTheme === "dark") {
          document.documentElement.setAttribute("data-theme", "dark")
        } else {
          // Auto mode - let CSS media query handle it
          document.documentElement.removeAttribute("data-theme")
        }
      }

      // Run immediately to prevent flash
      initTheme()
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={fontSans}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={fontSerif}
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style is:global>
      @view-transition {
        navigation: auto;
      }
      .layout-navbar {
        position: sticky;
        top: 0;
        z-index: 10;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }
      main {
        min-height: 60vh;
        width: 100%;
        margin: 0 auto;
        padding: 0 1rem;
        max-width: 1200px;
      }
    </style>
  </head>
  <body class="subpixel-antialiased">
    <Drawer>
      <div slot="content">
        <div id="navbar" class="layout-navbar">
          <Header />
        </div>
        <main>
          <slot />
        </main>
        <Footer />
      </div>
    </Drawer>
    <script>
      const scroller = document.querySelector(".drawer-root")
      const navbar = document.getElementById("navbar")

      if (scroller && navbar) {
        let prevScrollpos = scroller.scrollTop
        let scrollThreshold = 60 // Only hide after scrolling 60px
        let isScrolling = false

        // Throttle scroll events for better performance
        const throttledScroll = () => {
          if (!isScrolling) {
            window.requestAnimationFrame(() => {
              let currentScrollPos = scroller.scrollTop
              let scrollDifference = Math.abs(currentScrollPos - prevScrollpos)

              // Only react if scrolled more than threshold
              if (scrollDifference > scrollThreshold) {
                if (prevScrollpos > currentScrollPos) {
                  // Scrolling up - show navbar
                  navbar.style.transform = "translateY(0)"
                } else if (currentScrollPos > 100) {
                  // Scrolling down and past initial area - hide navbar
                  navbar.style.transform = "translateY(-100%)"
                }
                prevScrollpos = currentScrollPos
              }

              isScrolling = false
            })
          }
          isScrolling = true
        }

        scroller.addEventListener("scroll", throttledScroll)
      }
    </script>
  </body>
</html>
