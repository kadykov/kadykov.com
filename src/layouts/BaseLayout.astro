---
import Footer from "../components/Footer.astro"
import { Font } from "astro:assets"
import Header from "../components/Header.astro"

interface Props {
  frontmatter: {
    title: string
    description: string
    pageType?: string // Optional page type for styling variations (e.g., "photo-gallery")
    [key: string]: any
  }
}

const { frontmatter } = Astro.props

// Handle title with fallbacks: frontmatter > default
const rawTitle = frontmatter.title
// Handle description with fallbacks: frontmatter > default
const rawDescription = frontmatter.description
// Optional page type for styling variations
const pageType = frontmatter.pageType

// Add site suffix to title unless it's the default or already has the suffix
const finalTitle =
  rawTitle === "kadykov.com" || rawTitle.endsWith(" | kadykov.com")
    ? rawTitle
    : `${rawTitle} | kadykov.com`

import "../styles/base.css"
---

<html lang="en" data-page-type={pageType}>
  <head>
    <script
      is:inline
      defer
      src="/umami/script.js"
      data-website-id="8254b650-ea3c-461d-9f3e-0ad467230fa1"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <Font
      cssVariable="--font-sans"
      preload={[{ subset: "latin", style: "normal" }]}
    />
    <Font
      cssVariable="--font-serif"
      preload={[{ subset: "latin", style: "normal" }]}
    />
    <Font cssVariable="--font-mono" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="license" href="https://creativecommons.org/licenses/by/4.0/" />
    <title>{finalTitle}</title>
    <meta name="description" content={rawDescription} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
