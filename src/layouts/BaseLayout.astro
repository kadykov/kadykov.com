---
import { SEO } from "astro-seo"
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"
import SearchDialog from "../components/SearchDialog.astro"
import { type FontPreload, getFontPreload } from "../config/fontPreload"

// Dynamic font imports - Vite transforms these to URLs
import fontSans from "@fontsource-variable/source-sans-3/files/source-sans-3-latin-wght-normal.woff2?url"
import fontSansItalic from "@fontsource-variable/source-sans-3/files/source-sans-3-latin-wght-italic.woff2?url"
import fontSerif from "@fontsource-variable/bitter/files/bitter-latin-wght-normal.woff2?url"
import fontSerifItalic from "@fontsource-variable/bitter/files/bitter-latin-wght-italic.woff2?url"
import fontMono from "@fontsource-variable/source-code-pro/files/source-code-pro-latin-wght-normal.woff2?url"

// Map font preload keys to imported URLs
const fontUrlMap: Record<FontPreload, string> = {
  sans: fontSans,
  sansItalic: fontSansItalic,
  serif: fontSerif,
  serifItalic: fontSerifItalic,
  mono: fontMono,
}

interface Props {
  frontmatter: {
    title: string
    headline?: string
    subtitle?: string
    description: string
    pageType?: string // Optional page type for styling variations (e.g., "photo-gallery")
    // Optional blog-specific fields for OG metadata
    tags?: string[]
    pubDate?: Date
    lastUpdatedDate?: Date
    [key: string]: any
  }
  /**
   * Fonts to preload for this page. Defaults to ["sans"].
   * Set based on above-the-fold content to prevent CLS.
   */
  fontPreload?: FontPreload[]
}

const { frontmatter, fontPreload = getFontPreload() } = Astro.props

// Handle title with fallbacks: frontmatter > default
const rawTitle = frontmatter.title
// Handle description with fallbacks: frontmatter > default
const rawDescription = frontmatter.description
// Optional page type for styling variations
const pageType = frontmatter.pageType

// Determine content type for Pagefind filtering
// Default to "page" for general content
let contentType = "page"
if (frontmatter.pubDate) {
  // Blog posts have pubDate
  contentType = "blog"
} else if (pageType === "photo-gallery") {
  // Photo pages use photo-gallery page type
  contentType = "photo"
}

// Get pathname for multiple uses below
const pathname = Astro.url.pathname

// Add data-pagefind-body to main for blog posts and general pages
// Exclude listing/index pages (blog tags, photo galleries, etc.)
// Photo pages handle indexing at the element level (title, description, notes)
const isListingPage =
  pathname.startsWith("/blog/") ||
  pathname.startsWith("/photos/") ||
  pathname.startsWith("/tags/")
const shouldIndexMain =
  contentType === "blog" || (contentType === "page" && !isListingPage)

// Add site suffix to title unless it's the default or already has the suffix
const finalTitle =
  rawTitle === "kadykov.com" || rawTitle.endsWith(" | kadykov.com")
    ? rawTitle
    : `${rawTitle} | kadykov.com`

// Canonical URL for the current page
const canonicalUrl = new URL(Astro.url.pathname, Astro.site)

// OpenGraph image URL - generated during build
// OG images are colocated with index.html as og.png (or og.jpg for photos)
const isPhotoPage = pathname.startsWith("/photo/")
const ogImageExtension = isPhotoPage ? "og.jpg" : "og.png"
// Ensure pathname ends with / for proper URL joining
const normalizedPath = pathname.endsWith("/") ? pathname : `${pathname}/`
const ogImagePath = `${normalizedPath}${ogImageExtension}`
const ogImageUrl = new URL(ogImagePath, Astro.site).toString()
const ogImageType = isPhotoPage ? "image/jpeg" : "image/png"

// Blog metadata for article tags
const isBlogPost = !!frontmatter.pubDate
const pubDateISO = frontmatter.pubDate?.toISOString()

import "../styles/base.css"
---

<html
  lang="en"
  data-page-type={pageType}
  data-og-tags={frontmatter.tags?.join(",")}
  data-og-date={pubDateISO}
  data-og-headline={frontmatter.headline}
  data-og-subtitle={frontmatter.subtitle}
>
  <head>
    <script
      is:inline
      defer
      src="/uma/script.js"
      data-website-id="8254b650-ea3c-461d-9f3e-0ad467230fa1"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <SEO
      title={finalTitle}
      description={rawDescription}
      canonical={canonicalUrl.toString()}
      openGraph={{
        basic: {
          title: rawTitle,
          type: isBlogPost ? "article" : "website",
          image: ogImageUrl,
          url: canonicalUrl.toString(),
        },
        optional: {
          description: rawDescription,
          siteName: "kadykov.com",
          locale: "en_US",
        },
        image: {
          width: 1200,
          height: 630,
          alt: rawTitle,
          type: ogImageType,
        },
        article: isBlogPost
          ? {
              publishedTime: pubDateISO,
              modifiedTime: frontmatter.lastUpdatedDate?.toISOString(),
              tags: frontmatter.tags,
            }
          : undefined,
      }}
      twitter={{
        card: "summary_large_image",
        title: rawTitle,
        description: rawDescription,
        image: ogImageUrl,
        imageAlt: rawTitle,
      }}
    />

    {/* Dynamic font preloading based on page content */}
    {
      fontPreload.map((font) => (
        <link
          rel="preload"
          as="font"
          type="font/woff2"
          href={fontUrlMap[font]}
          crossorigin="anonymous"
        />
      ))
    }

    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="license" href="https://creativecommons.org/licenses/by/4.0/" />
  </head>
  <body data-pagefind-filter={`type:${contentType}`}>
    <Header />
    <main data-pagefind-body={shouldIndexMain || undefined}>
      <slot />
    </main>
    <Footer />
    <SearchDialog />
  </body>
</html>
