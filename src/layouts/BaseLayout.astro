---
import { SEO } from "astro-seo"
import Footer from "../components/Footer.astro"
import fontSans from "@fontsource-variable/source-sans-3/files/source-sans-3-latin-wght-normal.woff2?url"
import fontSerif from "@fontsource-variable/bitter/files/bitter-latin-wght-normal.woff2?url"
import Header from "../components/Header.astro"

interface Props {
  frontmatter: {
    title: string
    description: string
    pageType?: string // Optional page type for styling variations (e.g., "photo-gallery")
    // Optional blog-specific fields for OG metadata
    tags?: string[]
    pubDate?: Date
    lastUpdatedDate?: Date
    [key: string]: any
  }
}

const { frontmatter } = Astro.props

// Handle title with fallbacks: frontmatter > default
const rawTitle = frontmatter.title
// Handle description with fallbacks: frontmatter > default
const rawDescription = frontmatter.description
// Optional page type for styling variations
const pageType = frontmatter.pageType

// Add site suffix to title unless it's the default or already has the suffix
const finalTitle =
  rawTitle === "kadykov.com" || rawTitle.endsWith(" | kadykov.com")
    ? rawTitle
    : `${rawTitle} | kadykov.com`

// Canonical URL for the current page
const canonicalUrl = new URL(Astro.url.pathname, Astro.site)

// OpenGraph image URL - generated during build
// Path pattern: /og/{pathname}.png (e.g., /og/about.png, /og/blog-my-post.png)
const pathname = Astro.url.pathname
const ogImagePath =
  pathname === "/" || pathname === ""
    ? "/og/index.png"
    : `/og/${pathname.replace(/^\/|\/$/g, "").replace(/\//g, "-")}.png`
const ogImageUrl = new URL(ogImagePath, Astro.site).toString()

// Blog metadata for article tags
const isBlogPost = !!frontmatter.pubDate
const pubDateISO = frontmatter.pubDate?.toISOString()

import "../styles/base.css"
---

<html
  lang="en"
  data-page-type={pageType}
  data-og-tags={frontmatter.tags?.join(",")}
  data-og-date={pubDateISO}
>
  <head>
    <script
      is:inline
      defer
      src="/uma/script.js"
      data-website-id="8254b650-ea3c-461d-9f3e-0ad467230fa1"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <SEO
      title={finalTitle}
      description={rawDescription}
      canonical={canonicalUrl.toString()}
      openGraph={{
        basic: {
          title: rawTitle,
          type: isBlogPost ? "article" : "website",
          image: ogImageUrl,
          url: canonicalUrl.toString(),
        },
        optional: {
          description: rawDescription,
          siteName: "kadykov.com",
          locale: "en_US",
        },
        image: {
          width: 1200,
          height: 630,
          alt: rawTitle,
          type: "image/png",
        },
        article: isBlogPost
          ? {
              publishedTime: pubDateISO,
              modifiedTime: frontmatter.lastUpdatedDate?.toISOString(),
              tags: frontmatter.tags,
            }
          : undefined,
      }}
      twitter={{
        card: "summary_large_image",
        title: rawTitle,
        description: rawDescription,
        image: ogImageUrl,
        imageAlt: rawTitle,
      }}
    />

    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={fontSans}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={fontSerif}
      crossorigin="anonymous"
    />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="license" href="https://creativecommons.org/licenses/by/4.0/" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
