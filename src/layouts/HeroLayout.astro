---
import BaseLayout from "./BaseLayout.astro"
import Hero from "../components/Hero.astro"

interface Props {
  frontmatter: {
    title: string
    description: string
    [key: string]: any
  }
}

const { frontmatter } = Astro.props
---

<BaseLayout frontmatter={frontmatter}>
  <Hero>
    <slot name="hero" />
  </Hero>
  <slot />
</BaseLayout>
