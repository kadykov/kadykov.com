---
import HeroLayout from "./HeroLayout.astro"

interface Props {
  frontmatter: {
    title: string
    description: string
  }
}

const { frontmatter } = Astro.props

// HeroArticleLayout requires explicit title and description - fail the build if missing
if (!frontmatter?.title) {
  throw new Error(
    "HeroArticleLayout requires a title in frontmatter. If you don't have meaningful title content, consider using ArticleLayout instead."
  )
}

if (!frontmatter?.description) {
  throw new Error(
    "HeroArticleLayout requires a description in frontmatter. If you don't have meaningful description content, consider using ArticleLayout instead."
  )
}
---

<HeroLayout frontmatter={frontmatter}>
  <article>
    <slot />
  </article>
</HeroLayout>
