---
import HeroLayout from "./HeroLayout.astro"

interface Props {
  title?: string
  description?: string
  frontmatter?: {
    title: string
    description: string
  }
}

const { title, description, frontmatter } = Astro.props

// Handle both direct props and frontmatter
const finalTitle = title || frontmatter?.title || "Untitled"
const finalDescription =
  description || frontmatter?.description || "No description"
---

<HeroLayout title={finalTitle} description={finalDescription}>
  <article>
    <slot />
  </article>
</HeroLayout>
