---
import { Icon } from "astro-icon/components"
const year = new Date().getFullYear()
const lastUpdated = new Date().toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
})
const commitHash = "main" // TODO: Get actual latest commit hash
---

<footer>
  <Icon name="logo" />

  <p>
    &copy; 2024&ndash;{year} Aleksandr Kadykov.
    <br />
    <a
      href="https://creativecommons.org/licenses/by/4.0/"
      rel="license noopener"
      target="_blank"
    >
      CC BY 4.0
    </a>
    &mdash; only few rights reserved.
  </p>

  <nav aria-label="Main pages">
    <h3>Pages</h3>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/about/">About</a></li>
      <li><a href="/contact/">Contact</a></li>
      <li><a href="/cv/">CV</a></li>
      <li><a href="/privacy-policy/">Privacy Policy</a></li>
    </ul>
  </nav>

  <nav aria-label="Photo galleries">
    <h3>Photos</h3>
    <ul>
      <li><a href="/photos/1/">All Photos</a></li>
      <li><a href="/photos/tags/">By Tags</a></li>
      <li><a href="/photos/dates/">By Dates</a></li>
    </ul>
  </nav>

  <nav aria-label="Blog">
    <h3>Blog</h3>
    <ul>
      <li><a href="/blog/">All Posts</a></li>
      <li><a href="/tags/">By Tags</a></li>
    </ul>
  </nav>

  <nav aria-label="Photo platforms">
    <h3>Platforms</h3>
    <ul>
      <li>
        <a
          href="https://www.flickr.com/photos/76995389@N08/"
          rel="noopener"
          target="_blank">Flickr</a
        >
      </li>
      <li>
        <a href="https://unsplash.com/@kadykov" rel="noopener" target="_blank"
          >Unsplash</a
        >
      </li>
    </ul>
  </nav>

  <p>
    <small>
      Last updated: <a
        href={`https://github.com/kadykov/kadykov.com/commit/${commitHash}`}
        rel="noopener"
        target="_blank">{lastUpdated}</a
      >
    </small>
  </p>
</footer>
