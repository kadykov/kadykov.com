---
import { Icon } from "astro-icon/components"
---

<a href="/" class="logo-container" aria-label="Home">
  <Icon name="logo" class="logo-icon" />
  <span class="logo-text logo-text-responsive">
    Aleksandr<br />KADYKOV
  </span>
</a>

<style is:global>
  .logo-container {
    display: flex;
    gap: 0.25rem;
    align-items: center;
    text-decoration: none;
  }
  .logo-icon {
    height: 2.5rem;
    width: auto;
    flex-shrink: 0;
  }
  @media (min-width: 680px) {
    /* sm */
    .logo-icon {
      height: 3rem;
    }
  }
  /* Show logo text on mobile, hide on tablet, show on desktop */
  .logo-text-responsive {
    display: block;
    font-size: 0.875rem;
    line-height: 1.2;
    font-weight: 600;
    color: var(--color-content);
    margin: 0;
  }
  @media (min-width: 680px) and (max-width: 899px) {
    .logo-text-responsive {
      display: none;
    }
  }
</style>
