---
import Logo from "./Logo.astro"
import Navigation from "./Navigation.astro"
import SearchButton from "./SearchButton.astro"
import SearchModal from "./SearchModal.astro"
---

<header>
  <Logo />
  <nav aria-label="Main navigation">
    <!-- Simple navigation list -->
    <ul>
      <Navigation />
      <li><SearchButton /></li>
    </ul>
  </nav>
</header>
<SearchModal />

<script>
  import { naturalStickyTop } from "natural-sticky"

  // Apply natural sticky behavior to the header
  const header = document.querySelector("header")
  if (header) {
    naturalStickyTop(header, { scrollThreshold: 7 })
  }
</script>
