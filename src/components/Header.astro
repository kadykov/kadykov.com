---
import Logo from "./Logo.astro"
import Navigation from "./Navigation.astro"
import Hamburger from "./Hamburger.astro"
import ThemeSwitch from "./ThemeSwitch.astro"
import StandaloneShareButton from "./StandaloneShareButton.astro"
---

<header>
  <div class="header-inner">
    <nav aria-label="Main navigation">
      <Logo />
      <ul>
        <Navigation />
        <li><ThemeSwitch /></li>
        <li>
          <StandaloneShareButton
            buttonClass="btn"
            dropdownAlignment="dropdown-end"
          />
        </li>
      </ul>
    </nav>
    <Hamburger />
  </div>
</header>

<style is:global>
  header {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    background: var(--color-bg-muted);
    box-shadow: var(--color-shadow);
    z-index: 20;
  }
  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.5rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 4.5rem;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex: 1;
  }
  nav ul {
    display: flex;
    align-items: center;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 0.5rem;
  }
  header button {
    padding: 0.5rem;
    margin: 0.5rem;
    width: 3rem;
    height: 3rem;
  }
  header button svg {
    height: 2rem;
    width: 2rem;
    color: var(--color-content);
  }
  .mobile-only {
    display: none;
  }
  @media (max-width: 680px) {
    nav ul {
      display: none;
    }
    .mobile-only {
      display: block;
    }
  }
</style>
