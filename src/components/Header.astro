---
import Logo from "./Logo.astro"
import Navigation from "./Navigation.astro"
import Hamburger from "./Hamburger.astro"
import ThemeSwitch from "./ThemeSwitch.astro"
import StandaloneShareButton from "./StandaloneShareButton.astro"
---

<header>
  <nav aria-label="Main navigation">
    <Logo />
    <ul>
      <Navigation />
      <li><ThemeSwitch /></li>
    </ul>
  </nav>
  <StandaloneShareButton />
  <Hamburger />
</header>

<style is:global>
  header {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    background: var(--color-bg-muted);
    box-shadow: var(--color-shadow);
    z-index: 20;
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 4em;
    padding: 0.5em 1.5em;
    max-width: 100vw;
  }

  /* Add responsive padding to limit content width */
  @media (min-width: 1200px) {
    header {
      padding-left: calc((100vw - 1200px) / 2 + 1.5em);
      padding-right: calc((100vw - 1200px) / 2 + 1.5em);
    }
  }

  header nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex: 1;
  }

  header nav ul {
    display: flex;
    align-items: center;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 0.5em;
  }

  header button,
  header details summary {
    padding: 0.5em;
    margin: 0;
    width: 2em;
    height: 2em;
  }

  header button svg,
  header details summary svg {
    height: 1em;
    width: 1em;
    color: var(--color-content);
  }

  .mobile-only {
    display: none;
  }

  @media (max-width: 680px) {
    header nav ul {
      display: none;
    }
    .mobile-only {
      display: block;
    }
  }
</style>
