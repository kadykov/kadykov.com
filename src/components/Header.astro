---
import Logo from "./Logo.astro"
import Navigation from "./Navigation.astro"
import SearchButton from "./SearchButton.astro"
---

<header id="navbar">
  <Logo />
  <nav aria-label="Main navigation">
    <!-- Simple navigation list -->
    <ul>
      <Navigation />
    </ul>
    <SearchButton />
  </nav>
</header>

<script>
  import { naturalStickyTop } from "natural-sticky"

  // Apply natural sticky behavior to the header
  const header = document.getElementById("navbar") as HTMLElement
  if (header) {
    naturalStickyTop(header, { snapEagerness: 2 })
  }
</script>
