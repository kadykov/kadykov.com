---
import Navigation from "../components/Navigation.astro"
---

<div class="drawer-root">
  <input id="navbar-drawer" type="checkbox" class="drawer-toggle" />

  <div class="drawer-content">
    <slot name="content" />
  </div>

  <div class="drawer-side">
    <ul class="drawer-menu">
      <Navigation />
    </ul>
  </div>
  <label for="navbar-drawer" aria-label="close sidebar" class="drawer-overlay"
  ></label>
</div>

<style is:global>
  .drawer-root {
    position: relative;
    height: 100vh;
    overflow-y: auto;
    overflow-x: hidden;
  }
  .drawer-toggle {
    display: none;
  }
  .drawer-content {
    min-height: 100vh;
  }
  .drawer-side {
    position: fixed;
    top: 0;
    right: 0;
    height: 100vh;
    width: 80vw;
    max-width: 320px;
    background: var(--color-bg-muted);
    box-shadow: var(--color-shadow);
    transform: translateX(100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 22;
    display: flex;
    flex-direction: column;
    pointer-events: none;
  }
  .drawer-toggle:checked ~ .drawer-side {
    transform: translateX(0);
    pointer-events: auto;
  }
  .drawer-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.3);
    cursor: pointer;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s;
    z-index: 20;
  }
  .drawer-toggle:checked ~ .drawer-overlay {
    opacity: 1;
    pointer-events: auto;
  }
  .drawer-menu {
    font-family: var(--font-sans);
    list-style: none;
    margin: 0;
    padding: 1.5rem 1rem;
    min-height: 100vh;
    background: inherit;
    color: var(--color-content);
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    max-width: 320px;
    width: 100%;
  }
</style>
