---
import OptimizedImage from "./OptimizedImage.astro"

interface Props {
  src: string
  alt: string
  title?: string
}

const { src, alt, title } = Astro.props
---

{
  title ? (
    <figure>
      <OptimizedImage src={src} alt={alt} loading="lazy" decoding="async" />
      <figcaption>{title}</figcaption>
    </figure>
  ) : (
    <OptimizedImage src={src} alt={alt} loading="lazy" decoding="async" />
  )
}
