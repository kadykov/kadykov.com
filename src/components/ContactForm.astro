---
import { Icon } from "astro-icon/components"
---

<form name="contact" method="POST" data-netlify="true" netlify-honeypot="title">
  <label>
    <Icon name="ri:account-circle-line" />
    <input type="text" name="name" placeholder="Name" required />
  </label>

  <label>
    <Icon name="ri:account-circle-line" />
    <input
      type="text"
      name="title"
      placeholder="Title"
      tabindex="-1"
      autocomplete="nope"
    />
  </label>

  <label>
    <Icon name="ri:mail-line" />
    <input type="email" name="email" placeholder="email@example.com" required />
  </label>

  <textarea
    name="message"
    placeholder="Hey Aleksandr, I'd like to chat about..."
    required></textarea>

  <button type="submit">
    <Icon name="ri:send-plane-line" />
    Send Message
  </button>
</form>

<style>
  /* Hide the second label (honeypot field) using positional selector */
  form > label:nth-of-type(2) {
    position: absolute;
    clip-path: inset(50%);
    overflow: hidden;
    white-space: nowrap;
    width: 1px;
    height: 1px;
  }
</style>
